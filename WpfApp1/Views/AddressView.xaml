<Window x:Class="ProdavnicaApp.Views.AddressView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource TitleAddress}"
        Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        Foreground="{DynamicResource MaterialDesignBodyLight}">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center">

			<TextBlock Text="{DynamicResource AddressTitle}"
                       FontSize="22" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Foreground="{DynamicResource MaterialDesignBody}"/>

			<TextBox x:Name="UlicaTextBox"
                     Width="300" Margin="0,5"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="{DynamicResource Street}"
                     Foreground="{DynamicResource MaterialDesignBody}"/>

			<TextBox x:Name="GradTextBox"
                     Width="300" Margin="0,5"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="{DynamicResource City}"
                     Foreground="{DynamicResource MaterialDesignBody}"/>

			<TextBox x:Name="PostanskiBrojTextBox"
                     Width="300" Margin="0,5"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="{DynamicResource PostCode}"
                     Foreground="{DynamicResource MaterialDesignBody}"/>

			<TextBox x:Name="DrzavaTextBox"
                     Width="300" Margin="0,5"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="{DynamicResource Country}"
                     Foreground="{DynamicResource MaterialDesignBody}"/>

			<ComboBox x:Name="TipAdreseComboBox"
                      Width="300" Margin="0,5"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      materialDesign:HintAssist.Hint="{DynamicResource AddressType}"
                      Foreground="{DynamicResource MaterialDesignBody}">
				<ComboBoxItem Content="{DynamicResource Personal}" Tag="Licna"/>
				<ComboBoxItem Content="{DynamicResource Delivery}" Tag="Isporuka"/>
			</ComboBox>
			
			<Button Content="{DynamicResource Confirm}"
                    Width="300" Height="40"
                    Margin="0,20,0,10"
                    Click="Confirm_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}" />

			<Button Content="{DynamicResource BackToOrder}"
                    Width="200" Height="30"
                    Click="BackToOrder_Click"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignFlatButton}" />

		</StackPanel>
	</ScrollViewer>
</Window>
